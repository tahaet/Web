

<div class="my-5 d-flex justify-content-between align-items-start">
    <h2 class="col-6">Transactions</h2>
    <a asp-action="AddTransaction" class="btn btn-primary px-4 py-2 text-center align-self-end">Add Transaction</a>
</div>
<div class="d-flex align-items-center mb-5">
    <div class="me-3">
        <label for="startDate" class="form-label">Start Date:</label>
        <input type="date" id="startDate" name="startDate"  required class="form-control d-inline" style="width: 300px;">
    </div>
    
    <div class="me-3">
        <label for="endDate" class="form-label">End Date:</label>
        <input type="date" id="endDate" name="endDate" required class="form-control d-inline" style="width: 300px;">
    </div>
    
    <a id="filterButton" class="btn btn-primary px-4">Filter</a>
    <a id="clearButton" class="btn btn-danger px-4 mx-2">Clear</a>
</div>

<div id="transactionResults"></div>

